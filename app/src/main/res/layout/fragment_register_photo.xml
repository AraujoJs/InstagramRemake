<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".register.view.RegisterActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="70dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/register_img_logo"
                android:layout_marginBottom="48dp"
                android:src="@drawable/photo_icon"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:contentDescription="@null" />

            <TextView
                android:text="@string/photo_register_title"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                style="@style/Theme.InstagramRemake.TextViewBase.Form" />

            <TextView
                style="@style/Theme.InstagramRemake.TextViewBase.Form"
                android:text="@string/photo_register_subtitle"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal" />

            <co.araujoarthur.instagramremake.login.view.LoadingButton
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/register_btn_enter"
                app:ola="@string/add_photo" />

            <Button
                android:id="@+id/register_btn_next"
                android:text="@string/next"
                style="@style/Theme.InstagramRemake.Link"
                android:textColor="@color/blue_enabled"
                android:textStyle="bold"
                />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
